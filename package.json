{
  "name": "drupalqa-action",
  "version": "0.1.0",
  "description": "Run DrupalQA scripts",
  "author": "hussainweb",
  "type": "module",
  "private": true,
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx @biomejs/biome check --write .",
    "format:check": "npx @biomejs/biome check .",
    "lint": "npx @biomejs/biome lint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "npx rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "drupal",
    "docker",
    "qa"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hussainweb/drupalqa-action/issues"
  },
  "homepage": "https://github.com/hussainweb/drupalqa-action#readme",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/exec": "^3.0.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.2",
    "@github/local-action": "^7.0.0",
    "@jest/globals": "^30.2.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.13",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "make-coverage-badge": "^1.2.0",
    "rollup": "^4.54.0",
    "ts-jest": "^29.4.4",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
